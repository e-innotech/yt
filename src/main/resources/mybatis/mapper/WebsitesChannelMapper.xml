<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.WebsitesChannelMapper">
	<resultMap id="BaseResultMap" type="com.yt.cms.model.WebsitesChannel">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="websites_id" property="websitesId" jdbcType="INTEGER" />
		<result column="channel_id" property="channelId"
			jdbcType="INTEGER" />
	</resultMap>
	<sql id="Base_Column_List">
		id, websites_id, channel_id
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from websites_channel
		where id = #{id,jdbcType=INTEGER}
	</select>

	<select id="query" resultMap="BaseResultMap"
		parameterType="com.yt.cms.model.WebsitesChannel">
		select
		<include refid="Base_Column_List" />
		from websites_channel  order by id desc
	</select>

	<delete id="deleteByWebId" parameterType="java.lang.Integer">
		delete from websites_channel
		where websites_id = #{webId,jdbcType=INTEGER}
	</delete>

	<insert id="insertSelective" parameterType="com.yt.cms.model.WebsitesChannel">
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into websites_channel
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="websitesId != null">
				websites_id,
			</if>
			<if test="channelId != null">
				channel_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="websitesId != null">
				#{websitesId,jdbcType=INTEGER},
			</if>
			<if test="channelId != null">
				#{channelId,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
	
	<!-- 批量删除 按照 网站id 和栏目id集合 -->
	<delete id="deleteByWebsitesId" parameterType="map">
		delete from websites_channel
		where websites_id = #{websitesId,jdbcType=INTEGER} and channel_id in 
		 <foreach collection="channelIds" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
	</delete>
	
	<!-- 批量新增 -->
	<insert id="insertBatch" parameterType="java.util.List">
		insert into websites_channel (websites_id,channel_id) values
		<foreach collection="list" item="item" index="index" 
			separator=",">
			(#{item.websitesId,jdbcType=INTEGER},#{item.channelId,jdbcType=INTEGER})
		</foreach>
	</insert>

	<update id="updateByPrimaryKeySelective" parameterType="com.yt.cms.model.WebsitesChannel">
		update websites_channel
		<set>
			<if test="websitesId != null">
				websites_id = #{websitesId,jdbcType=INTEGER},
			</if>
			<if test="channelId != null">
				channel_id = #{channelId,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

</mapper>