<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.yt.cms.model.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uname" property="userName" jdbcType="VARCHAR" />
        <result column="createDate" property="createDate" jdbcType="VARCHAR" />
        <result column="isUse" property="isUse" jdbcType="INTEGER"/>
    </resultMap>
    
     <resultMap id="ResultMap" type="com.yt.cms.model.User" extends="BaseResultMap">
         <association property="userGroup" javaType="com.yt.cms.model.UserGroup">
           	<id column="user_group_id" property="id" jdbcType="INTEGER" />
    		<result column="groupName" property="groupName" jdbcType="VARCHAR" />
         </association>
    </resultMap>
    <sql id="Base_Column_List" >
        id, uname, createDate,isUse
    </sql>
 	
    <!-- 查询所有用户信息 -->
    <select id="query" resultMap="ResultMap"  parameterType="map">
       SELECT 
       a.id, a.uname, a.createDate,a.isUse,b.id user_group_id, b.groupName
	   FROM 
	   (select * from users where (user_group_id != 999999 or user_group_id is null) 
	    <if test="userName != null">
                and uname like concat('%', #{userName}, '%')
       </if>
	   ) a
	    left join 
	    (select * from user_group where id != 999999 ) b on a.user_group_id = b.id 	  
        order by a.id desc
        <if test="page.pageLimit != null and page.pageSize != null and page.pageSize != 0" >
	        LIMIT #{page.pageLimit},#{page.pageSize}  
	 	</if>
    </select>
    
    <!-- 查询所有用户信息 -->
    <select id="queryCount" resultType="long"  parameterType="java.lang.String">
          SELECT count(1) FROM 
	   (select * from users where (user_group_id != 999999 or user_group_id is null) 
	    <if test="userName != null">
                and uname like concat('%', #{userName}, '%')
       </if>
	   ) a
	    left join 
	    (select * from user_group where id != 999999 ) b on a.user_group_id = b.id 	  
     
    </select>
    
	<!-- 主键id查找用户信息,用户组 -->
    <select id="findById" parameterType="java.lang.Integer" resultMap="ResultMap" >
        SELECT 
       a.id, a.uname, a.createDate,a.isUse,a.user_group_id,b.groupName 
	   FROM users a, user_group b
	   WHERE a.id = #{id} and isUse = 1 and a.user_group_id = b.id and b.isDel = 0
    </select>
	<!-- 用户登录 -->
	<select id="login" parameterType="com.yt.cms.model.User" resultMap="ResultMap" >
        SELECT id, uname, user_group_id FROM users WHERE uname = #{userName} and pwd = #{passWord} and isUse = 1
    </select>
    <!-- 检测用户名是否已经被注册 -->
    <select id="findByUserName" parameterType="java.lang.String" resultType="java.lang.Integer" >
        SELECT count(1) FROM users WHERE uname = #{userName}
    </select>
    
	<!-- 用户注册，或者管理员新增用户 -->
    <insert id="insert" parameterType="com.yt.cms.model.User">
       <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
          SELECT LAST_INSERT_ID()
      </selectKey>
       INSERT INTO 
       		users
	     <trim prefix="(" suffix=")" suffixOverrides="," >
	      <if test="userName != null" >
	        uname,
	      </if>
	      <if test="passWord != null" >
	        pwd,
	      </if>
	      <if test="userGroup != null and userGroup.id != null" >
	        user_group_id,
	      </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides="," >
	      <if test="userName != null" >
	        #{userName,jdbcType=VARCHAR},
	      </if>
	      <if test="passWord != null" >
	        #{passWord,jdbcType=VARCHAR},
	      </if>
	      <if test="userGroup != null and userGroup.id != null" >
	        #{userGroup.id,jdbcType=INTEGER},
	      </if>
	      
	    </trim>
    </insert>
    <!-- 更新用户密码，注意用户名不许更新 -->
    <update id="updatePwd" parameterType="com.yt.cms.model.UserUpdatePwd" >
       UPDATE 
       		users 
       SET 
       	pwd = #{passWord}
       WHERE 
       		id = #{id} and pwd = #{currentPwd}
    </update>
    
     <update id="updateByPrimaryKeySelective" parameterType="com.yt.cms.model.UserInfoUpdate" >
    update users
    <set >
      <if test="isUse != null" >
       	isUse = #{isUse,jdbcType=INTEGER},
      </if>
       <if test="userGroupId != null" >
       	user_group_id = #{userGroupId,jdbcType=INTEGER}
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
   
  </update>
    
    
    <!-- 删除用户 物理删除 -->
    <delete id="delete" parameterType="java.lang.Integer">
       DELETE FROM
       		 users 
       WHERE 
       		 id =#{id}
    </delete>

</mapper>