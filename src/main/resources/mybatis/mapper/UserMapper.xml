<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.yt.cms.model.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uname" property="userName" jdbcType="VARCHAR" />
        <result column="pwd" property="passWord" jdbcType="VARCHAR" />
        <result column="createDate" property="createDate" jdbcType="VARCHAR" />
        <result column="isUse" property="isUse" jdbcType="INTEGER"/>
    </resultMap>
    
     <resultMap id="ResultMap" type="com.yt.cms.model.User" extends="BaseResultMap">
        <result column="user_group_id" property="userGroupId" jdbcType="INTEGER" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, uname, pwd, createDate,isUse
    </sql>

 	<sql id="Column_List" >
        id, uname, pwd, createDate,isUse,user_group_id
    </sql>
    
    <select id="query" resultMap="BaseResultMap"  >
       SELECT 
       <include refid="Base_Column_List" />
	   FROM users
    </select>

    <select id="findById" parameterType="java.lang.Integer" resultMap="ResultMap" >
        SELECT 
       <include refid="Column_List" />
	   FROM users
	   WHERE id = #{id}
    </select>

	<select id="login" parameterType="com.yt.cms.model.User" resultType="java.lang.Integer" >
        SELECT count(1) FROM users WHERE uname = #{userName} and pwd = #{passWord}
    </select>
    
    <select id="findByUserName" parameterType="java.lang.String" resultType="java.lang.Integer" >
        SELECT count(1) FROM users WHERE uname = #{userName}
    </select>
    

    <insert id="insert" parameterType="com.yt.cms.model.User">
       <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
          SELECT LAST_INSERT_ID()
      </selectKey>
       INSERT INTO 
       		users
       		(uname,pwd) 
       	VALUES
       		(#{userName}, #{passWord})
    </insert>
    
    <update id="update" parameterType="com.yt.cms.model.User" >
       UPDATE 
       		users 
       SET 
       	<if test="userName != null">uname = #{userName},</if>
       	<if test="passWord != null">pwd = #{passWord},</if>
       WHERE 
       		id = #{id}
    </update>
    
     <update id="disableOrEnable" parameterType="com.yt.cms.model.User" >
       UPDATE 
       		users 
       SET 
       	isUse = #{isUse}
       WHERE 
       		id = #{id}
    </update>
    
    <update id="setUserGroup4User" parameterType="com.yt.cms.model.User" >
       UPDATE 
       		users 
       SET 
       	user_group_id = #{userGroupId}
       WHERE 
       		id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.Integer">
       DELETE FROM
       		 users 
       WHERE 
       		 id =#{id}
    </delete>

</mapper>