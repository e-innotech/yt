<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.ModuleMapper" >
  <resultMap id="BaseResultMap" type="com.yt.cms.model.Module" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="moduleName" property="moduleName" jdbcType="VARCHAR" />
    <result column="moduleCode" property="moduleCode" jdbcType="VARCHAR" />
    <result column="parentId" property="parentId" jdbcType="INTEGER" />
  </resultMap>
  
  <resultMap id="ResultMap" type="com.yt.cms.model.Module" extends="BaseResultMap">
  		<collection property="resources" ofType="com.yt.cms.model.Resource">
            <id column="resource_id" property="id"/>
            <result column="resourceName" property="resourceName" jdbcType="VARCHAR" />
		    <result column="uri" property="uri" jdbcType="VARCHAR" />
		    <result column="module_id" property="moduleId" jdbcType="INTEGER" />
		    <result column="rw" property="rw" jdbcType="INTEGER" />
        </collection>
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, moduleName, moduleCode,parentId
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from module
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <select id="query" resultMap="BaseResultMap"  >
    select 
    <include refid="Base_Column_List" />
    from module
  </select>
  
   <select id="queryByParentId" resultMap="ResultMap"  >
    select 
    <include refid="Base_Column_List" />
    from module where parentId = #{parentId,jdbcType=INTEGER}
  </select>
  <!-- 查询模块下所有的资源数据 -->
  <select id="queryResourcesByModuleId" resultMap="BaseResultMap"  >
    select 
     a.id as resource_id, a.resourceName, a.uri, a.module_id, a.rw,b.id,b.moduleName, b.moduleCode,b.parentId
    from resource a,module b where a.module_id = b.id
  </select>
  
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from module
    where id = #{id,jdbcType=INTEGER}
  </delete>

  <insert id="insertSelective" parameterType="com.yt.cms.model.Module" >
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
          SELECT LAST_INSERT_ID()
      	</selectKey>
    insert into module
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="moduleName != null" >
        moduleName,
      </if>
      <if test="moduleCode != null" >
        moduleCode,
      </if>
    parentId,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      
      <if test="moduleName != null" >
        #{moduleName,jdbcType=VARCHAR},
      </if>
      <if test="moduleCode != null" >
        #{moduleCode,jdbcType=VARCHAR},
      </if>
    #{parentId,jdbcType=INTEGER},
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.yt.cms.model.Module" >
    update module
    <set >
      <if test="moduleName != null" >
        moduleName = #{moduleName,jdbcType=VARCHAR},
      </if>
      <if test="moduleCode != null" >
        moduleCode = #{moduleCode,jdbcType=VARCHAR},
      </if>
      <if test="parentId != null" >
        parentId = #{parentId,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
	
	
</mapper>