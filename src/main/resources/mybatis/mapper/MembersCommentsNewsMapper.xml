<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.MembersCommentsNewsMapper" >
  <resultMap id="BaseResultMap" type="com.yt.cms.model.MembersCommentsNews" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="members_id" property="membersId" jdbcType="INTEGER" />
    <result column="news_publish_id" property="publishId" jdbcType="INTEGER" />
    <result column="createDate" property="createDate" jdbcType="TIMESTAMP" />
    <result column="isDel" property="isDel" jdbcType="INTEGER" />
    <result column="delDate" property="delDate" jdbcType="TIMESTAMP" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="website_id" property="websiteId" jdbcType="INTEGER" />
  </resultMap>

<resultMap id="ResultMap" type="com.yt.cms.model.MembersCommentsNews" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="createDate" property="createDate" jdbcType="TIMESTAMP" />
    <result column="content" property="content" jdbcType="VARCHAR" />
		<association property="members" javaType="com.yt.cms.model.Members">
			 <id column="members_id" property="id" jdbcType="INTEGER" />
			<result column="uname" property="uname" jdbcType="VARCHAR"/>
		</association>
	    <association property="news" javaType="com.yt.cms.model.News">
	    	 <id column="news_id" property="id" jdbcType="INTEGER" />
		    <result column="news_title" property="newsTitle" jdbcType="VARCHAR" />
	    </association>
	    
	    <association property="website" javaType="com.yt.cms.model.Websites">
	    	 <id column="website_id" property="id" jdbcType="INTEGER" />
		    <result column="siteName" property="siteName" jdbcType="VARCHAR" />
	    </association>
  </resultMap>
  <sql id="Base_Column_List" >
    id, members_id, news_publish_id, createDate, content
  </sql>

   <select id="query" resultMap="ResultMap" parameterType="map" >
    select a.id, a.createDate, a.content, e.id as website_id , e.siteName ,c.id as news_id, c.news_title, d.id as members_id,d.uname
    from members_comments_news a, news_publish b,news c ,members d, websites e where a.isDel = 0 and a.news_publish_id = b.id and b.news_id = c.id 
    and a.members_id = d.id and c.isDel =0
    and b.website_id = e.id
    	<if test="record.startDate != null" >
       		<![CDATA[ and a.createDate >= #{record.startDate,jdbcType=TIMESTAMP}  ]]>
      	</if>
        <if test="record.endDate != null" >
       		<![CDATA[ and a.createDate <= #{record.endDate,jdbcType=TIMESTAMP}  ]]>
      	</if>
      	 <if test="record.memberUName != null" >
	       and d.uname like concat('%', #{record.memberUName}, '%')
	    </if>
	     <if test="record.newsTitle != null" >
	       and c.news_title like concat('%', #{record.newsTitle}, '%')
	    </if>
	    <if test="record.content != null" >
	       and a.content like concat('%', #{record.content}, '%')
	    </if>
	    <if test="record.siteName != null" >
	       and e.siteName like concat('%', #{record.siteName}, '%')
	    </if>
	    
	    
	     order by a.id desc
	    <if test="page.pageLimit != null and page.pageSize != null and page.pageSize != 0" >
	        LIMIT #{page.pageLimit},#{page.pageSize}  
	 	</if>
  </select>
  
  <select id="queryCount" parameterType="com.yt.cms.model.MembersCommentsNews" resultType="long">
  	  select count(1)
    from members_comments_news a, news_publish b,news c ,members d, websites e where a.isDel = 0 and a.news_publish_id = b.id and b.news_id = c.id 
    and a.members_id = d.id and c.isDel =0
    and b.website_id = e.id
    	<if test="startDate != null" >
       		<![CDATA[ and a.createDate >= #{startDate,jdbcType=TIMESTAMP}  ]]>
      	</if>
        <if test="endDate != null" >
       		<![CDATA[ and a.createDate <= #{endDate,jdbcType=TIMESTAMP}  ]]>
      	</if>
      	 <if test="memberUName != null" >
	       and d.uname like concat('%', #{memberUName}, '%')
	    </if>
	     <if test="newsTitle != null" >
	       and c.news_title like concat('%', #{newsTitle}, '%')
	    </if>
	    <if test="content != null" >
	       and a.content like concat('%', #{content}, '%')
	    </if>
	    <if test="record.siteName != null" >
	       and e.siteName like concat('%', #{record.siteName}, '%')
	    </if>
	 
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from members_comments_news
    where id = #{id,jdbcType=INTEGER}
  </delete>
  
  <update id="deleteLogical" parameterType="java.lang.Integer">
  	update members_comments_news set isDel = 1, delDate = now() where id = #{id,jdbcType=INTEGER}
  </update>
  
</mapper>