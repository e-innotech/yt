<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.cms.mapper.RolesResourceMapper">
	<resultMap id="BaseResultMap" type="com.yt.cms.model.RolesResource">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="roles_id" property="rolesId" jdbcType="INTEGER" />
		<result column="resource_id" property="resourceId" jdbcType="INTEGER" />
	</resultMap>
	<sql id="Base_Column_List">
		id, roles_id, resource_id
	</sql>

	<!-- 批量新增 -->
	<insert id="insertBatch" parameterType="java.util.List">
		insert into roles_resource (roles_id, resource_id) values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.rolesId,jdbcType=INTEGER},#{item.resourceId,jdbcType=INTEGER})
		</foreach>
	</insert>

	<!-- 批量删除 按照角色id 和资源id集合 -->
	<delete id="deleteByRolesIdResourceIds" parameterType="map">
		delete from roles_resource
		where roles_id = #{rolesId,jdbcType=INTEGER}
		and resource_id in
		<foreach collection="resourceIds" item="item" index="index"
			open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>

	<insert id="insertSelective" parameterType="com.yt.cms.model.RolesResource">
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into roles_resource
		<trim prefix="(" suffix=")" suffixOverrides=",">

			<if test="rolesId != null">
				roles_id,
			</if>
			<if test="resourceId != null">
				resource_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">

			<if test="rolesId != null">
				#{rolesId,jdbcType=INTEGER},
			</if>
			<if test="resourceId != null">
				#{resourceId,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="com.yt.cms.model.RolesResource">
		update roles_resource
		<set>
			<if test="rolesId != null">
				roles_id = #{rolesId,jdbcType=INTEGER},
			</if>
			<if test="resourceId != null">
				resource_id = #{resourceId,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

	<!-- 删除该角色id下的所有角色资源关系数据 -->
	<delete id="deleteByRolesId" parameterType="java.lang.Integer">
		delete from roles_resource
		where roles_id = #{rolesId,jdbcType=INTEGER}
	</delete>

</mapper>